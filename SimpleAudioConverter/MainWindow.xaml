<Window x:Class="SimpleAudioConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleAudioConverter"
        mc:Ignorable="d"
        Title="Flac to Mp3 Converter" Height="300" Width="350">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="_Select File"/>
                    <MenuItem Header="_Convert"/>
                    <Separator/>
                    <MenuItem Header="_Exit"/>
                </MenuItem>
            </Menu>
            <TextBlock Text="Select a flac song file to convert"
                    TextAlignment="Center"
                       FontSize="18" Margin="0,10,0,10"/>
            <Button x:Name="SelectFileBtn" Content="Select File" Width="150" Height="30" Margin="0,10,0,10"/>

            <Label Content="Song Selected: None selected..." HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10"/>

            <CheckBox HorizontalAlignment="Center" Content="Make copies both original and converted" Margin="0,10,0,10"/>
            
            <Button x:Name="ConvertSongBtn" Content="Convert" Width="150" Height="30" Margin="0,10,0,10"/>
            
        </StackPanel>
    </Grid>
</Window>
